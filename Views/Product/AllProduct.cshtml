@{
    ViewBag.Title = "AllProduct";
}
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}
@model List<Project.Models.Item>
<!-- Start: PRODUCT LIST -->
        <div class="container">
          <div class="page-header">
            <h2><font color="blue">All products</font></h2>
          </div>
          <div class="row-fluid">
            <ul class="thumbnails">
                @foreach(var p1 in Model)
                {
              <li class="span3">
                <div class="thumbnail">
                  <img src="~/Images/@p1.Image" style="height:150px;width:260px">
                  <div class="caption">
                    <h3>@p1.Title</h3>
                    <p>
                      <div>Description     @p1.Description</div>
                      <div>Price        @p1.Price</div>

                    </p>
                  </div>
                  <div class="widget-footer">
                    <p>
                      <a href="/Product/updateProduct?pname=@p1.Title" class="btn btn-primary">Edit</a>&nbsp;
                      <a href="/Product/deleteProduct?pname=@p1.Title" class="btn">Delete</a>
                    </p>
                  </div>
                </div>
              </li>
                }
            
                </ul>
          </div>
        </div>
      <!-- End: PRODUCT LIST -->
 
    <!-- End: MAIN CONTENT -->
