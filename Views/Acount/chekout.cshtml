@{
    ViewBag.Title = "chekout";
}
@{
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";

}
@{
    Nullable<int> tot = 0;
    String pna = "";
}
@model List<Project.Models.Item>
 <div align="center"><div class="row">
          <div class="span6 offset3">
            <h4 class="widget-header"><i class="icon-lock"></i><font color="purple">Give Order Details</h4>
            <div class="widget-body">
              <div class="center-align">
                  <div class="form-horizontal form-signin-signup">
                      @using (Html.BeginForm("placeOrder", "Acount", FormMethod.Post))
                      {
                          <table border="1">
                            <tr>
                                <td>Product Name</td>
                                <td>Product Description</td>
                                <td>Product Price</td>

                            </tr>
                              
                          @foreach (var a in Model)
                          {
                              <tr>
                                <td>@a.Title</td>
                                <td>@a.Description</td>
                                <td>@a.Price</td>
                                 
                            </tr>
                             tot=tot+a.Price;
                              if (pna != "")
                              {
                                  pna = pna + "," + a.Title;
                              }
                              else
                              {
                                  pna = a.Title;
                              }
                          }
                          </table>

                   <div align="center" class="pull-left" >Total=@tot</div>
                   <input type="hidden" name="total" value="@tot" />
                   <input type="hidden" name="prods" value="@pna" />

                    <div ><input type="text" name="uname" placeholder="Your Name" required="required"></div>
                    <div ><input type="date" name="d1" placeholder="Dates" required="required"></div>
                 <div><textarea rows="4" id="orderShipping" name="add" data-val-required="You must specify a shipping address." data-val="true"></textarea></div>
                   <!-- <div ><input type="text" name="add" placeholder="Address" required="required"></div>-->

                    <div class="pull-right">
                  <input type="submit" value="place Order" class="btn btn-primary btn-large"></div>
                      }
                </div>
              </div>
            </div>
          </div>
        </div>
